{
  "extends": ["development"],
  "hints": {
    "axe/text-alternatives": "off",
    "axe/name-role-value": "off",
    "axe/structure": "off",
    "disown-opener": "off",
    "no-inline-styles": "off",
    "button-type": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "width: fit-content",
          "backdrop-filter",
          "overflow-clip-margin",
          "overflow: clip"
        ]
      }
    ],
    "axe/parsing": [
      "default",
      {
        "duplicate-id": "off",
        "empty-heading": "warn"
      }
    ],
    "custom-rule-1": "error",
    "custom-rule-2": "warn",
    "custom-rule-3": "off",
    "grouped-rules": [
      "default",
      {
        "rule-1": "off",
        "rule-2": "warn"
      }
    ]
  },
  "ignore": [
    "node_modules/",
    "build/"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["js/script.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
